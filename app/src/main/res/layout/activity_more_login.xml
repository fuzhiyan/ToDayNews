<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_more_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="登录今日头条"
        android:textSize="22sp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/more_login_linearLayout"
        android:orientation="vertical"
        android:layout_centerInParent="true">


        <Button
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_more_phone_login"
            android:background="#FF0000"
            android:textColor="#FFFFFF"
            android:text="手机号登录"/>
        <Button
            android:layout_marginTop="20dp"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_more_phone_register"
            android:textColor="#FF0000"
            android:text="注册新账号"/>

    </LinearLayout>

    <TextView
        android:id="@+id/more_login_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/more_login_linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="————————  其他方式登录  ————————"
        android:textColor="#737373"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_below="@id/more_login_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/more_login_images"
        android:orientation="horizontal">

        <ImageView
            android:layout_weight="1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/ic_drawer_qzone"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_drawer_tencent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_drawer_weibo"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            />
    </LinearLayout>

</RelativeLayout>
